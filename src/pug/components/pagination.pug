.pagination-wrap
  .pagination
    a.pagination__first(href="#")
      +icon('chevron-double-left', 'pagination__icon')
    a.pagination__prev(href="#")
      +icon('chevron-left', 'pagination__icon')
    ul.pagination__list
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item /
      li.pagination__item
        a.pagination__link(href="#") 15
    a.pagination__next(href="#")
      +icon('chevron-right', 'pagination__icon')
    a.pagination__last(href="#")
      +icon('chevron-double-right', 'pagination__icon')