extends templates/main

include components/logo
include components/navbar
include components/soc

block variables
  - const title = 'Landing Page';
  - const pageClass = 'landing-page';

block header
  // header
  header.header.land-header
    .container-fluid
      .header__promo
        +logo(logoIndex, 'header__promo-logo')

        +b.BUTTON.navbar-trigger.d-md-none.order-first(type="button")
          +e.SPAN.line
          +e.SPAN.line

        .navbar-bg

        +navbar([
          {
            title: 'Search by Occasion',
            active: true
          },
          {
            title: 'Meet your Digital Assistant'
          },
          {
            title: 'Community Love'
          },
          {
            title: 'Who we are'
          },
        ], 'navbar--promo header__promo-navbar')

        .header__promo-auth-helpers
          a.header__login.btn.btn--grad.btn--sm.btn--animated(href="#") Sign Up
          a.header__signup.btn.btn--primary-reverse.btn--sm.btn--animated(href="#") Log In
  // /header

block content
  
  .container-fluid
    
    // hero-promo
    section.hero-promo.land-section
      .row.no-gutters
        .col-md-6
          .hero-promo__heading 
            .hero-promo__heading-text We #[span.hero-promo__heading-lead help you] find the #[div perfect #[span.hero-promo__heading-important gift]] for any #[br] occasion
          //- a.hero-promo__btn.btn.btn--grad.btn--animated(href="#") Get Started #[i.fa.fa-chevron-right]
        .col-md-6.d-none.d-md-block
          img.hero-promo__img.img-responsive(src="assets/images/robot-hero.png" alt="")
      +soc('hero-promo__soc')
      //- .next-helper How it works?
    // /hero-promo

    // promo-features
    section.promo-features-section.land-section
      .row.justify-content-center

        .col-sm-6.col-md-4

          a.promo-feature(href="#")
            .promo-feature__img-wrap
              img.promo-feature__img(src="assets/images/promo-feature-1.png" alt="" width="300" height="300")
            .promo-feature__heading Winter holidays
            p.promo-feature__desc Our curated selection of the standout gifts for Christmas to help you find the perfect match for the special someone on your list.
            span.promo-feature__btn.btn.btn--grad
              i.fa.fa-chevron-right
        
        .col-sm-6.col-md-4

          a.promo-feature(href="#")
            .promo-feature__img-wrap
              img.promo-feature__img(src="assets/images/promo-feature-2.png" alt="" width="300" height="300")
            .promo-feature__heading Browse all Occasions
            p.promo-feature__desc Find the perfect gift for any occasion – birthdays, anniversaries, furry friends and more.
            span.promo-feature__btn.btn.btn--grad
              i.fa.fa-chevron-right
        
        .col-sm-6.col-md-4

          a.promo-feature(href="#")
            .promo-feature__img-wrap
              img.promo-feature__img(src="assets/images/promo-feature-3.png" alt="" width="300" height="300")
            .promo-feature__heading Sign Up
            p.promo-feature__desc Create an account to get custom event reminders and gift recommendations for any occasion.
            span.promo-feature__btn.btn.btn--grad
              i.fa.fa-chevron-right
    // /promo-features

    // subscribe-section
    section.home-subscribe-section.land-section
      .home-subscribe
        .home-subscribe__header
          .home-subscribe__heading.main-heading-wrap.main-heading-wrap--left
            .main-heading
              .main-heading__body #[span.main-heading__first-letter S]tay in #[span.main-heading__accent the know!]
          p.home-subscribe__desc Join our mailing list and get reminders of upcoming occasions and the hottest trending gifts
        form.home-subscribe__form(action="/" method="POST" name="subscribe")
          .home-subscribe__field
            input.home-subscribe__input(type="email" name="email" placeholder="You Email")
            button.home-subscribe__btn.btn.btn--grad(type="submit")
              +icon('paper-plane', 'home-subscribe__btn-icon')

      .next-helper How it works?
    // /subscribe-section

    // how-it-works
    section.stages-section.land-section

      .main-heading-wrap.main-heading-wrap--left.land-section__heading
        .main-heading
          .main-heading__body #[span.main-heading__first-letter H]ow it #[span.main-heading__accent works?]

      .stages-section__stages

        +b.FIGURE.stage
          +e.img-wrap
            +e.IMG.img(src="assets/images/step-1.png" alt="")
          +e.FIGCAPTION.figcaption
            +e.heading.active Sign up
            +e.desc It takes no more than a minute

        +b.FIGURE.stage
          +e.img-wrap
            +e.IMG.img(src="assets/images/step-2.png" alt="")
          +e.FIGCAPTION.figcaption
            +e.heading Add friends
            +e.desc Add everyone you want to congratulate

        +b.FIGURE.stage
          +e.img-wrap
            +e.IMG.img(src="assets/images/step-3.png" alt="")
          +e.FIGCAPTION.figcaption
            +e.heading Setup occasions
            +e.desc Birthdays, holidays or just significant dates

        +b.FIGURE.stage
          +e.img-wrap
            +e.IMG.img(src="assets/images/step-4.png" alt="")
          +e.FIGCAPTION.figcaption
            +e.heading Relax
            +e.desc We’ll send you reminders, gift ideas, look for the best price, and even take care of ordering

        .stage-dec.stage-dec-one
        .stage-dec.stage-dec-two
        .stage-dec.stage-dec-three
        .stage-dec.stage-dec-four

      //- .next-helper Testemonials
    // /how-it-works

    // promo-video
    section.section-video.land-section
      .section-video__main-wrapper
        .section-video__main
          iframe(width="560" height="315" src="https://www.youtube.com/embed/N-ByeUGD6dU?controls=0&modestbranding=0&rel=0&showinfo=0" title="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope" allowfullscreen)

      .next-helper Testemonials
    // /promo-video

    // opinions
    section.opinions-section.land-section
      
      .main-heading-wrap.main-heading-wrap--left.land-section__heading
        .main-heading
          .main-heading__body #[span.main-heading__first-letter C]lients #[span.main-heading__accent testimonials]

      .row.no-gutters

        .col-md-4.d-none.d-md-block
          
          img.img-responsive(src="assets/images/robot-testimony.png" alt="")

        .col-md-8

          .opinions-carousel
            .swiper-container.opinions-carousel__container.js-opinions-carousel
              .swiper-wrapper

                .swiper-slide

                  article.opinion
                    figure.opinion__author
                      .opinion__author-img-wrap
                        img.opinion__author-img(src="assets/images/media/user-review.jpg" alt="")
                      figcaption.opinion__caption
                        .opinion__author-name Claudia Raidulyan
                        p.opinion__desc Quo cu sanctus corrumpit comprehensam. Te nec docendi sententiae sadipscing, amet malis erant sit ne. Quo an agam apeirian singulis, nec harrumpit comprehensam. Te nec docendi sententiae sadipscing, amet malis erant sit ne. Quo an agaant sit ne. Quo an agm apeirian singulis, nec ha beo animal docendi ea.
                        i.fas.fa-quotes-right
                        i.fas.fa-quotes-left

                .swiper-slide

                  article.opinion
                    figure.opinion__author
                      .opinion__author-img-wrap
                        img.opinion__author-img(src="assets/images/media/user-6.jpg" alt="")
                      figcaption.opinion__caption
